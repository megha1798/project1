<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="fontFamily">@font/segoeui</item>
        <item name="android:editTextColor">#295055</item>
        <item name="android:textColorPrimary">#295055</item>
        <item name="android:textColorSecondary">#295055</item>
        <item name="android:textColorTertiary">#295055</item>
        <item name="android:textColorPrimaryInverse">#295055</item>
        <item name="android:textColorSecondaryInverse">#295055</item>
        <item name="android:textColorTertiaryInverse">#295055</item>

    </style>

    <style name="MyTheme.FullScreen" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:editTextColor">#295055</item>
        <item name="android:textColorPrimary">#295055</item>
        <item name="android:textColorSecondary">#295055</item>
        <item name="android:textColorTertiary">#295055</item>
        <item name="android:textColorPrimaryInverse">#295055</item>
        <item name="android:textColorSecondaryInverse">#295055</item>
        <item name="android:textColorTertiaryInverse">#295055</item>

    </style>

    <style name="AppThemeColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>
</resources>